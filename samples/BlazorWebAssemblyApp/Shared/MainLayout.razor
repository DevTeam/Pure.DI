@inherits LayoutComponentBase
@using System.ComponentModel
@using Clock
@inject IAppViewModel App

<div class="page">
    <div class="top-row ps-3">
        <div class="container-fluid">@App.Title</div>
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://github.com/DevTeam/Pure.DI/blob/master/readme/BlazorWebAssemblyApp.md" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    protected override void OnInitialized()
    {
        ((INotifyPropertyChanged)App).PropertyChanged += (_, _) => StateHasChanged();
        base.OnInitialized();
    }
}