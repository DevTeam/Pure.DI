{
  "$schema": "http://json.schemastore.org/template",
  "identity": "Pure.DI.Template.ClassLibrary",
  "name": "Pure DI Class Library",
  "shortName": "dilib",
  "classifications": [
    "Pure.DI",
    "CSharpCodeGenerator"
  ],
  "precedence": "3000",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "description": "A project template for creating class library.",
  "author": "NikolayP",
  "generatorVersions": "[1.0.0.0-*)",
  "sourceName": "_PureDIProjectName_",
  "preferNameDirectory": true,
  "defaultName": "PureDILib",
  "symbols": {
    "compositionName": {
      "type": "parameter",
      "datatype": "string",
      "description": "The name of the composition class.",
      "defaultValue": "Composition",
      "FileRename": "_CompositionName_",
      "replaces": "$(CompositionName)"
    },
    "framework": {
      "type": "parameter",
      "datatype": "string",
      "description": "The target framework for the project (e.g. net10.0).",
      "defaultValue": ""
    },
    "frameworkDefault": {
      "type": "generated",
      "generator": "switch",
      "description": "generate a default framework value",
      "parameters": {
        "evaluator": "C++",
        "datatype": "string",
        "cases": [
          {
            "condition": "(framework == '')",
            "value": "net10.0"
          },
          {
            "condition": "(framework != '')",
            "value": ""
          }
        ]
      }
    },
    "frameworkValue": {
      "type": "generated",
      "generator": "join",
      "description": "join framework and frameworkDefault",
      "parameters": {
        "symbols": [
          {
            "type": "ref",
            "value": "framework"
          },
          {
            "type": "ref",
            "value": "frameworkDefault"
          }
        ]
      },
      "replaces": "$(Framework)"
    },
    "version": {
      "type": "parameter",
      "datatype": "string",
      "description": "Version of Pure.DI that will be referenced.",
      "defaultValue": "$(version)",
      "replaces": "$(PureDIVersion)"
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        ".template.config/**"
      ]
    }
  ],
  "primaryOutputs": [
    {
      "path": "_PureDIProjectName_.csproj"
    }
  ]
}